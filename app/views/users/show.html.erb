<div class="main user-show">
  <div class="container">
    <div class="user">
      <!--ユーザー名を出力するコード-->
      <h2><%= @user.name %></h2>
      <!--ユーザーのメールアドレスを出力するコード-->
      <p><%= @user.email %></p>
      <!--コードを編集してリンクを完成させる-->
      <%= link_to "ユーザー情報を編集する", edit_user_path(@user.id), class: "user_edit_button" %>
    </div>
  </div>  
</div>